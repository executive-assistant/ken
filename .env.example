# ============================================================================
# Executive Assistant Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your values
# Never commit .env to version control (it contains secrets)

# ============================================================================
# LLM Provider Configuration
# ============================================================================

# Default LLM Provider: anthropic, openai, zhipu, ollama, gemini, qwen, kimi, minimax
DEFAULT_LLM_PROVIDER=ollama

# ============================================================================
# Anthropic Configuration
# ============================================================================

ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ============================================================================
# OpenAI Configuration
# ============================================================================

OPENAI_API_KEY=your_openai_api_key_here

# ============================================================================
# Zhipu Configuration
# ============================================================================

ZHIPUAI_API_KEY=your_zhipu_api_key_here

# ============================================================================
# Ollama Configuration
# ============================================================================

# Ollama Mode: cloud or local
OLLAMA_MODE=cloud

# Cloud Mode Configuration
OLLAMA_CLOUD_API_KEY=your_ollama_cloud_api_key_here
OLLAMA_CLOUD_URL=https://ollama.com

# Local Mode Configuration
OLLAMA_LOCAL_URL=http://localhost:11434

# Legacy (deprecated, maps to OLLAMA_CLOUD_API_KEY)
# OLLAMA_API_KEY=your_ollama_api_key_here

# ============================================================================
# Gemini (Google) Configuration
# ============================================================================

GOOGLE_API_KEY=your_google_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Vertex AI Backend (optional, defaults to Gemini API)
GOOGLE_GENAI_USE_VERTEXAI=false
GOOGLE_CLOUD_PROJECT=your_project_id
GOOGLE_CLOUD_LOCATION=us-central1

# ============================================================================
# Qwen (Alibaba) Configuration
# ============================================================================

DASHSCOPE_API_KEY=your_dashscope_api_key_here

# ============================================================================
# Kimi K2 (Moonshot AI) Configuration
# ============================================================================

MOONSHOT_API_KEY=your_moonshot_api_key_here
MOONSHOT_API_BASE=https://api.moonshot.ai/v1

# ============================================================================
# MiniMax M2 Configuration
# ============================================================================

MINIMAX_API_KEY=your_minimax_api_key_here
MINIMAX_API_TYPE=openai
MINIMAX_API_BASE=https://api.minimax.io/v1

# ============================================================================
# Langfuse Observability Configuration
# ============================================================================

# Langfuse API Keys (get from https://cloud.langfuse.com or your self-hosted instance)
LANGFUSE_SECRET_KEY=sk-lf-your_secret_key_here
LANGFUSE_PUBLIC_KEY=pk-lf-your_public_key_here

# Langfuse Base URL
# EU Region: https://cloud.langfuse.com
# US Region: https://us.cloud.langfuse.com
# Self-hosted: Your custom Langfuse URL
LANGFUSE_BASE_URL=https://cloud.langfuse.com

# Tracing Environment: production, staging, development, etc.
LANGFUSE_TRACING_ENVIRONMENT=production

# ============================================================================
# Telegram Configuration
# ============================================================================

TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here

# ============================================================================
# PostgreSQL Configuration
# ============================================================================

POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=executive_assistant
POSTGRES_PASSWORD=executive_assistant_password
POSTGRES_DB=executive_assistant_db

# ============================================================================
# Google Workspace Integration (Optional)
# ============================================================================

GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/callback/google

# Token encryption (required for production, generate with: Fernet.generate_key())
EMAIL_ENCRYPTION_KEY=your_encryption_key_here

# ============================================================================
# Firecrawl Configuration (Web Scraping API)
# ============================================================================

FIRECRAWL_API_KEY=your_firecrawl_api_key_here
FIRECRAWL_API_URL=https://api.firecrawl.dev

# ============================================================================
# Admin Configuration
# ============================================================================

# Admin User IDs (comma-separated)
ADMIN_USER_IDS=

# Admin Thread IDs (comma-separated)
# Format: channel:user_id (e.g., telegram:123456, http:admin)
ADMIN_THREAD_IDS=telegram:6282871705, http:admin
